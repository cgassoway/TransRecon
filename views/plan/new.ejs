<%  include ../partials/header  %>

<div class="container>
    <div class="row">
        <!--<div class="col-md-3 col-xs-3></div>-->
        <div class="col-md-4 col-xs-4 col-md-offset-4 col-xs-offset-4">
            <h1 style="text-align: center;">Create New Plan Item</h1>
            <form action="/TransRecon/plan/" class="form-horizontal" role="form" method="POST">
                <div class="form-group">
                  <% var currentDate = new Date() %>
                  <% var day = currentDate.getDate() %>
                  <% var month = currentDate.getMonth() + 1 %>
                  <% var year = currentDate.getFullYear() %>
                  <% var date = month + "/" + day + "/" + year %>
                  <label>Date<input class="form-control" style="width:30%" type="text" name="date" value=<%= date %>></label>
                </div>
                
                <div class="form-group">
                    <label>Merchant<input class="form-control" type = "text" name="merchant" placeholder="Merchant" ></label>
                </div>
<!--            <  put check box here for transfer -->

                <div class="form-group">
                    <label>Account<select class="form-control" name="account_name" >
                        <%accts.forEach(function(acct) { %>
                            <option value=<%=acct.account_name%>><%=acct.account_name%></option>
                        <% });%>
                        </select>
                    </label>
                </div>
               <div class="form-group">
                    <label>Amount<input class="form-control" style="width:40%" type="number" step="any" name="amount" required placeholder="Amount  - 9.99"></label>
                </div>

                <div class="form-group">
                    <label>Frequency<select class="form-control" name="frequency" >
                            <option value="Once">Once</option>
                            <option value="Monthly">Monthly</option>
                            <option value="Quarterly">Quarterly</option>
                        </select>
                    </label>
                </div>
                <div class="form-group">
                    <label>Until Date<input class="form-control" style="width:40%" type="text" name="until_date" value=<%= date %> placeholder="mm/dd/yyyy"></label>
                </div>

                <div class="form-group">
                    <label>Memo<input class="form-control" type="text" name="memo" placeholder="Purpose"></label>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
                <div>
                    <a href="/TransRecon/plan">Go Back</a>
                </div>
            </form>
            <!--<a href="/plan">Go Back</a>-->
        </div>
        <!--<div class="col-md-3 col-xs-3></div>-->
    </div>
</div>

<%  include ../partials/footer  %>