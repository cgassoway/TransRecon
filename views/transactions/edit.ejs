<%  include ../partials/header  %>

<div class="container">
    <div class="row>">
        <h1 style="text-align: center;">Edit Transaction</h1>
        
        <div style="width:30%; margin: 40px auto;">
        
            <form action="/TransRecon/transactions/<%=transaction._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <div class="form-group">
                        <input class="form-control" type="text" name="transaction[date]" value="<%= transaction.date%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type = "text" name="transaction[description]" value="<%= transaction.description%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type = "text" name="transaction[orig-desc]" value="<%= transaction.original_description%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="transaction[amount]" step="any" value="<%= transaction.amount%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="transaction[trans_type]" value="<%= transaction.transaction_type%>">
                    </div>                
                    <div class="form-group">
                        <input class="form-control" type = "text" name="transaction[acct_name]" value="<%= transaction.accountName%>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                
            </form>
             <a href="/TransRecon/transactions">Go Back</a>
    </div>
        </div>
       
</div>
<%  include ../partials/footer  %>