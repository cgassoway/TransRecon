<div class="container>
    <div class="row">
        <!--<div class="col-md-3 col-xs-3></div>-->
        <div class="col-md-4 col-xs-4 col-md-offset-4 col-xs-offset-4">
            <h1 style="text-align: center;">Edit Register Item</h1>
        
        <!--<div class="col-md-4" style="width:30%; margin: 20px auto;">-->
            
            
        
            <form action="/TransRecon/register/<%=register._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <h5>Transaction Date</h5>
                    <% var date = register.date.toString();%>
                    <input class="form-control" type="text" style="width:30%" name="register[date]" value="<%=date.substr(4, 3) + " " + date.substr(8, 2) + " " + date.substr(11, 4)%>">
                </div>
                <div class="form-group">
                    <h5>Description</h5>
                    <input class="form-control" type = "text" name="register[description]"  value="<%=register.description%>">
                </div>
                <div class="form-group">
                    <h5>Amount</h5>
                    <input class="form-control" type="number" style="width:30%" step="any" name="register[amount]"  value="<%=register.amount.toFixed(2)%>">
                </div>
                <div class="form-group">
                    <h5>Account Name</h5>

                    <select class="form-control" name="register[accountName]" required>
                        <% accts.forEach(function(acct) {
                            if (register.accountName === acct) {
                                %>
                                <option value=<%=acct%> selected="selected"><%=acct%></option>
                                <%
                                 } else { %>
                                    <option value=<%=acct%>><%=acct%></option>
                                    <% } %>
                        <% });
                        
                        %>
                    </select>
                </div>

                <div class="form-group">
                    <h5>Financial Institution</h5>

                    <select class="form-control" name="register["institution"]" required>
                        <% finInst.forEach(function(inst) {
                            if (register.institution === inst) {
                                %>
                                <option value=<%=inst%> selected="selected"><%=inst%></option>
                                <%
                                 } else { %>
                                    <option value=<%=inst%>><%=inst%></option>
                                    <% } %>
                        <% });
                        %>
                    </select>
                </div>

               
                <div class="form-group">
                    <h5>Memo</h5>
                    <input class="form-control" type="text" name="register[memo]"  value="<%=register.memo%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary">Update</button>
                    <button class="pull-right btn btn-lg btn-primary" action="/TransRecon/register/">Go Back</button>
                </div>
            </form>
        </div>
    </div>
</div>



