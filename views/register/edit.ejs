<%  include ../partials/header  %>

<div class="container>
  <div class="row">
    <!--<div class="col-md-3 col-xs-3></div>-->
    <div class="col-md-4 col-xs-4 col-md-offset-4 col-xs-offset-4">
      
      <h1 style="text-align: center;">Edit Register Item</h1>
      <form action="/TransRecon/register/<%=register[0].register_id%>?_method=PUT" method="POST">
        <div class="form-group">
          <label>Transaction Date<input class="form-control" type="text" style="width:30%" name="date" value="<%=register[0].date%>"></label>
        </div>
        <div class="form-group">
          <label>Merchant<input class="form-control" type = "text" name="merchant"  value="<%=register[0].merchant%>"></label>
        </div>
        <div class="form-group">
          <%= console.log("amount - " + register[0].amount) %>
          <label>Amount<input class="form-control" type="number" style="width:30%" step="any" name="amount"  value="<%=register[0].amount%>"></label>
        </div>
        <div class="form-group">
          <label>Account Name<select class="form-control" name="account_name" required>
            <% accts.forEach(function(acct) {
              if (register[0].account_name === acct.account_name) {
                %>
                <option value=<%=acct.account_name%> selected="selected"><%=acct.account_name%></option>
                <%
                  } else { %>
                    <option value=<%=acct.account_name%>><%=acct.account_name%></option>
                    <% } %>
            <% });
            
            %>
          </select></label>
        </div>
        
        <div class="form-group">
          <label>Memo<input class="form-control" type="text" name="memo"  value="<%=register[0].memo%>"></label>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary">Update</button>
          <button class="pull-right btn btn-lg btn-primary" action="/TransRecon/register/">Go Back</button>
        </div>
      </form>
    </div>
  </div>
</div>



<%  include ../partials/footer  %>