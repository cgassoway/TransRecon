 
  <div class="form-group">
    <h4>Payee</h4>
    <input class="form-control" type="text" class="form-control" name="merchant" value="All" >
  </div>
  <div class="form-group">
    <h4>Financial Institution</h4>
    <select class="form-control" name="finInst" required>
      <option value="All" selected="selected">All</option>
        <% finInst.forEach(function(acct) { %>
      <option value=<%=acct.institution%>><%=acct.institution%></option>
        <% }) %>
    </select>
  </div>
  <div class="form-group" >

    <h4>Reconciled?</h4>
      <div>
          <div>
            <label class="radio-inline"><input type="radio" id="yes" name="reconciled" value="Yes" />Yes</label>
            <label class="radio-inline"><input type="radio" id="no" name="reconciled" value="No" />No</label>
            <label class="radio-inline"><input type="radio" id="both" name="reconciled" checked="checked" value="Both" />Both</label>
          </div>                            
      </div>
  </div>
  <div class="form-group" style="margin-top: 10px;">
    <input type="submit" class="btn btn-primary btn-lg pull-right" value="Create Report">
  </div>
