<%  include ../partials/header  %>

<div class="container">
    <div class="row">
         <div class="col-md-4 col-xs-4 col-md-offset-4 col-xs-offset-4">
            <h1 style="text-align: center;">Delete Register Item</h1>
        
 
                <div>
                    <h4>Transaction Date</h4>
                    <label for="date"></label>
                    <% var date = register.dateDue.toString();%>
                    <p><%=date.substr(4, 3) + " " + date.substr(8, 2) + " " + date.substr(11, 4)%></p>
                </div>
                <div>
                    <h4>Check Number</h4>
                    <%var checkNum = "None";
                    if (register.checkNumber) {
                        checkNum = register.checkNumber
                    }%>
                    <p><%=checkNum%></p>
                </div>
                <div  class="form-group">
                    <h4>Description</h4>
                    <p><%=register.description%></p>
                </div>
                <div>
                    <h4>Amount</h4>
                    <p><%=register.amount.toFixed(2)%></p>
                </div>
                <div>
                    <h4>Account Name</h4>
                    <p><%=register.accountName%></p>
                </div>
                <div>
                    <h4>Frequency</h4>
                    <p><%=register.frequency%></p>
                </div>
                
                <div>
                    <h4>Memo</h4>
                    <p><%=register.memo%></p>
                </div>

 
            <div>
                <h4>Are you sure you want to delete this item?</h4>
                <form  method="POST" action="/register/<%=register._id%>?_method=DELETE">
                    <button type="submit" class="btn btn-lg btn-danger">Yes, Delete</button>
                </form>
                <a class="btn btn-lg btn-primary" href="/register">No, Go Back</a>
            </div>
        </div>
    </div>
</div>



<%  include ../partials/footer  %>